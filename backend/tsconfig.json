{
  "compilerOptions": {
    "target": "ES2020", // Modern JS for Node
    "module": "CommonJS", // Should this remain as commonjs?
    "outDir": "./dist", // Output directory
    "rootDir": "src", // Source root
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow default imports from CJS
    "skipLibCheck": true // Skip type checks on declaration files
  },
  "include": ["src/api/server.ts"],
  "exclude": ["node_modules", "dist"]
}
